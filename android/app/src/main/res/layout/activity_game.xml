<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/LinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".GameActivity">

    <!-- displays the header bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="#333333">

        <!-- displays Game status or so -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/hello_world"
            android:textColor="#ffffff"
            android:id="@+id/status"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="480dp"
            android:layout_marginRight="480dp"/>

        <!-- displays "money" -->
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/money"
            android:textColor="#ffffff"
            android:id="@+id/moneyLabel"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"/>

        <!-- displays amount of money -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/money_default"
            android:textColor="#ffffff"
            android:id="@+id/money"
            android:layout_marginTop="15dp"
            android:minWidth="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/board">

        <GridLayout
            android:id="@+id/gridView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="5"
            android:rowCount="5"
            android:orientation="vertical">

            <!-- displays the pyramid and the dice field -->
            <RelativeLayout
                android:layout_width="@dimen/pyramid_width"
                android:layout_height="@dimen/pyramid_height"
                android:id="@+id/diceField"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_marginStart="@dimen/pyramid_margin_left"
                android:layout_marginLeft="@dimen/pyramid_margin_left"
                android:layout_marginTop="@dimen/pyramid_margin_top" >

                <!-- displays the dice field with 5 dice -->
                <GridLayout
                    android:id="@+id/diceGrid"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:columnCount="3"
                    android:rowCount="3"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="@dimen/dice_size"
                        android:layout_height="@dimen/dice_size"
                        android:id="@+id/dice1"
                        android:layout_row="0"
                        android:layout_column="2">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dice_size"
                        android:layout_height="@dimen/dice_size"
                        android:id="@+id/dice2"
                        android:layout_row="2"
                        android:layout_column="2">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dice_size"
                        android:layout_height="@dimen/dice_size"
                        android:id="@+id/dice3"
                        android:layout_row="2"
                        android:layout_column="0">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dice_size"
                        android:layout_height="@dimen/dice_size"
                        android:id="@+id/dice4"
                        android:layout_row="0"
                        android:layout_column="0">
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dice_size"
                        android:layout_height="@dimen/dice_size"
                        android:id="@+id/dice5"
                        android:layout_row="1"
                        android:layout_column="1">
                    </RelativeLayout>
                 </GridLayout>

                <!-- the "button" to roll a dice -->
                <ImageButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/dice"
                    android:background="@drawable/pyramid"
                    android:contentDescription="@string/dice"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field1"
                android:layout_row="2"
                android:layout_column="4">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field2"
                android:layout_row="3"
                android:layout_column="4">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field3"
                android:layout_row="4"
                android:layout_column="4">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field4"
                android:layout_row="4"
                android:layout_column="3" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field5"
                android:layout_row="4"
                android:layout_column="2" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field6"
                android:layout_row="4"
                android:layout_column="1">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field7"
                android:layout_row="4"
                android:layout_column="0" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field8"
                android:layout_row="3"
                android:layout_column="0">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field9"
                android:layout_row="2"
                android:layout_column="0" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field10"
                android:layout_row="1"
                android:layout_column="0" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field11"
                android:layout_row="0"
                android:layout_column="0" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field12"
                android:layout_row="0"
                android:layout_column="1"  >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field13"
                android:layout_row="0"
                android:layout_column="2" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field14"
                android:layout_row="0"
                android:layout_column="3" >
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field15"
                android:layout_row="0"
                android:layout_column="4">
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/grid_item_width"
                android:layout_height="@dimen/grid_item_height"
                android:id="@+id/field16"
                android:layout_row="1"
                android:layout_column="4">
            </RelativeLayout>

        </GridLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <Button
                android:id="@+id/button"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:text="@string/hello_world"
                android:background="#ff175a26"
                android:minHeight="50dp"
                android:textColor="#fff"
                android:textSize="24sp"
                android:clickable="true"
                android:layout_marginTop="60dp"
                android:layout_marginStart="80dp"
                android:layout_marginLeft="80dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>