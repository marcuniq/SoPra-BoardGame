<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/FrameLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".GameActivity"
    android:numColumns="5"
    android:rowCount="5"
    android:background="@drawable/board">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="36sp"
        android:text=""/>

    <GridLayout
        android:id="@+id/gridView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="5"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field1"
            android:layout_row="2"
            android:layout_column="4" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field2"
            android:layout_row="3"
            android:layout_column="4" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field3"
            android:layout_row="4"
            android:layout_column="4" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field4"
            android:layout_row="4"
            android:layout_column="3" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field5"
            android:layout_row="4"
            android:layout_column="2" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field6"
            android:layout_row="4"
            android:layout_column="1" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field7"
            android:layout_row="4"
            android:layout_column="0" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field8"
            android:layout_row="3"
            android:layout_column="0"  >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field9"
            android:layout_row="2"
            android:layout_column="0" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field10"
            android:layout_row="1"
            android:layout_column="0" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field11"
            android:layout_row="0"
            android:layout_column="0" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field12"
            android:layout_row="0"
            android:layout_column="1"  >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field13"
            android:layout_row="0"
            android:layout_column="2" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field14"
            android:layout_row="0"
            android:layout_column="3" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field15"
            android:layout_row="0"
            android:layout_column="4" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="@dimen/grid_item_width"
            android:layout_height="@dimen/grid_item_height"
            android:id="@+id/field16"
            android:layout_row="1"
            android:layout_column="4"  >
        </RelativeLayout>

    </GridLayout>
</FrameLayout>
