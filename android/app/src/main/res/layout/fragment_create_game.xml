<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AuthActivity" android:weightSum="1" android:background="#ffdfe836">

    <EditText
        android:id="@+id/etNewGameName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="SampleGame"
        android:layout_marginTop="100dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvNewGameName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of the Game"
        android:layout_gravity="center_horizontal" />

    <Button
        android:id="@+id/createGameButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:text="Create New Game"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:background="#ff9080af"/>

    <TextView
        android:id="@+id/logBox"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" android:layout_weight="0.05"/>

</LinearLayout>